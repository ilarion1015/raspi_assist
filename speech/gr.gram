#JSGF V1.0;

grammar gr;
public <rule> = <hello> | <thank> | <date> | <time> | <weather> | <socket_on> | <socket_off>;

<hello> = привет | здравствуй | здравствуйте;
<thank> = спасибо | спасибо большое | благодарю;
<date> = скажи дату | какой сегодня день;
<time> = скажи время | сколько времени | сколько сейчас времени | который час;
<weather> = скажи погоду | какая сейчас погода;
<socket_on> = включи розетку | подай напряжение;
<socket_off> = выключи розетку | убери напряжение;
